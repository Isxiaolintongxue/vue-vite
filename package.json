{
  "name": "vue-vite",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=18.19.0"
  },
  "type": "module",
  "scripts": {
    "dev": "vite --mode dev",
    "dev:prod": "vite --mode prod",
    "build": "vue-tsc --noEmit --skipLibCheck && vite build --mode prod",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write .",
    "typecheck": "vue-tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@unocss/reset": "^0.58.6",
    "axios": "^1.6.8",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/qs": "^6.9.14",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@unocss/eslint-config": "^0.58.6",
    "@unocss/transformer-directives": "^0.58.6",
    "@vitejs/plugin-vue": "^5.0.4",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.24.0",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "sass": "^1.72.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.3",
    "unocss": "^0.58.6",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.2.6",
    "vite-plugin-vue-devtools": "^7.0.21",
    "vue-tsc": "^2.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,scss,css,html}": [
      "prettier --write"
    ]
  }
}
